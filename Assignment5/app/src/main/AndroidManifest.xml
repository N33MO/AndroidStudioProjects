<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reactiongame.assignment5">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <activity android:name=".HomePage"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GamePage"
            android:theme="@style/AppTheme">

        </activity>

        <activity android:name=".ScoreBoard"
            android:label="@string/score_board"
            android:theme="@style/Style_scoreboard"
            android:parentActivityName=".HomePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomePage"/>
        </activity>

        <activity android:name=".AddScore"
            android:theme="@style/AppTheme">

        </activity>
    </application>

</manifest>